<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="Veldrid.Maui.Samples.MainPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:veldrid="clr-namespace:Veldrid.Maui.Controls;assembly=Veldrid.Maui.Controls">

    <Grid x:Name="layout">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <ScrollView
            x:Name="scrollView"
            Grid.Row="0"
            HeightRequest="50"
            Orientation="Horizontal" />
        <Grid Grid.Row="1" BackgroundColor="Yellow">
            <Grid x:Name="veldridContainer" IsClippedToBounds="True" />
        </Grid>
    </Grid>
</ContentPage>
